# Face Recognition API - Environment Variables
# =====================================

# ============================================
# API CONFIGURATION
# ============================================
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=false

# ============================================
# AUTHENTICATION (Required for production)
# ============================================
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
API_KEY=nx910Nn3Rywy7ztsINtMBxMf64yfTYe0K00nNzogGD8
AUTH_ENABLED=true

# ============================================
# CORS (Set specific origins)
# ============================================
# Comma-separated list of allowed origins
CORS_ORIGINS=https://your-frontend.com,https://api.your-domain.com

# ============================================
# MODEL CONFIGURATION
# ============================================
RECOGNIZER_TYPE=sface

# SFace (recommended)
SFACE_SIMILARITY_THRESHOLD=0.70

# ArcFace (fallback)
ARCFACE_SIMILARITY_THRESHOLD=0.90

# ============================================
# DATABASE (Required)
# ============================================
USE_DATABASE=true

# Full connection string (recommended)
# Format: postgresql://user:password@host:port/database?sslmode=require
DATABASE_URL=postgresql://kmcc:Hz4ANvsSqmH5FuEd@pgsql14.postgres.database.azure.com:5432/vsmt3

# Table configuration
DB_TABLE_NAME=public."Visitor"
DB_VISITOR_ID_COLUMN=id
DB_IMAGE_COLUMN=base64Image
DB_FEATURES_COLUMN=facefeatures
DB_VISITOR_LIMIT=0

# ============================================
# HNSW INDEX
# ============================================
HNSW_M=32
HNSW_EF_CONSTRUCTION=400
HNSW_EF_SEARCH=400

# ============================================
# LOGGING
# ============================================
# Use WARNING or ERROR in production to reduce log volume
LOG_LEVEL=WARNING

# ============================================
# PERFORMANCE
# ============================================
# Number of uvicorn workers (set based on CPU cores)
WORKERS=1
